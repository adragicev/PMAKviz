@model KvizAD.DbModels.Odgovori

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Odgovori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OdgovoriId" />
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PitanjaId" class="control-label"></label>
                <select asp-for="PitanjaId" class="form-control" asp-items="ViewBag.PitanjaId"></select>
                <span asp-validation-for="PitanjaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCorect" class="control-label"></label>
                <input asp-for="IsCorect" class="form-control" />
                <span asp-validation-for="IsCorect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Pitanja" asp-action="Pitanja">Vrati se na popis pitanja</a>
</div>

