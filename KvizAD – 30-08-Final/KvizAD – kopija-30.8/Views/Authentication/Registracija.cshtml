
@{
    ViewData["Title"] = "Registracija";
}


<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet' type='text/css'>


<style>
    body {
  
        color: #6B6B6B;
        background-color: #F2F2F2;
        font-family: 'Open Sans', sans-serif;
    }

    h2 {
        /*color: #6D7781;
        color: #1a1a1a;*/
        color: #DA4453;
        font-family: 'Sofia';
        font-size: 15px;
        /*font-weight: bold;*/
        font-size: 3.6em;
        text-align: center;
        margin-bottom: 20px;
    }

    .login {
        width: 350px;
        position: absolute;
        top: 10%;
        left: 50%;
        margin-left: -175px;
    }

    input[type="text"], input[type="password"], input[type=checkbox] {
        width: 350px;
        padding: 20px 0px;
        background: transparent;
        border: 0;
        /*border-bottom: 1px solid #435160;*/
        border-bottom: 1px solid #0d0d0d;
        outline: none;
        /*color: #6D7781;*/
        font-size: 16px;
    }

  
     input[type=submit]

    {
        background: #1FCE6D;
        border: 0;
        width: 300px;
        height: 40px;
        border-radius: 3px;
        color: #fff;
        font-size: 12px;
        cursor: pointer;
        transition: background .3s ease-in-out;
    }

    input [type="submit"]:hover {
        background: #16aa56;
        animation-name: shake
    }

    

    .forgot {
        margin-top: 30px;
        display: block;
        font-size: 11px;
        text-align: center;
        font-weight: bold;
    }

    .agree {
        padding: 30px 0px;
        font-size: 12px;
        text-indent: 25px;
        line-height: 15px;
        margin-right: 20px;
    }
</style>

<div class="login" style="text-align:center">
    <h2>Register</h2>
    <form method="POST" asp-controller="Authentication" asp-action="Registracija">
        <input name="username" placeholder="Username" type="text" />
        <input name="password" placeholder="Password" , type="password">
        <input name="passconf" placeholder="Password confirm" , type="password">
        <input name="email" placeholder="E-Mail Address" type="text" />

        <div class="agree" style="text-align:center">
            <input type="submit" class="animated" value="Register">
        </div>

    </form>




</div>


